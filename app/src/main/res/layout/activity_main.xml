<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9575CD"

    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="730dp"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/applynow"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/imageView"
            android:layout_below="@+id/imageView"
            android:background="@drawable/round"
            android:backgroundTint="#311B92"
            android:text="Apply Now"
            android:textColor="#ffffff"
            android:textStyle="bold" />

          <ImageView
              android:id="@+id/imageView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_alignParentTop="true"
              android:layout_marginStart="18dp"
              android:layout_marginTop="50dp"
              app:srcCompat="@drawable/corrctn" />

        <Button
            android:id="@+id/modify"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/imageView2"
            android:layout_alignTop="@+id/applynow"
            android:background="@drawable/round"
            android:backgroundTint="#311B92"
            android:text="Modify Application"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/modify" />

        <Button
            android:id="@+id/requiredproofs"
            android:layout_width="150dp"
            android:layout_height="50dp"

            android:layout_alignStart="@+id/imageView3"
            android:layout_below="@+id/imageView3"
            android:background="@drawable/round"
            android:backgroundTint="#311B92"
            android:text="Required Proofs"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="290dp"
            app:srcCompat="@drawable/required" />

        <Button
            android:id="@+id/trackpan"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/imageView2"
            android:layout_alignTop="@+id/requiredproofs"
            android:background="@drawable/round"
            android:backgroundTint="#311B92"
            android:text="Track PAN"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_alignStart="@+id/imageView2"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/track" />

        <Button
            android:id="@+id/searchpan"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/applynow"
            android:layout_below="@+id/imageView5"
            android:background="@drawable/round"
            android:backgroundTint="#311B92"
            android:text="Search PAN"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView5"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginLeft="20dp"
            android:layout_marginTop="520dp"
            app:srcCompat="@drawable/search" />

        <Button
            android:id="@+id/faq"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/modify"
            android:layout_alignTop="@+id/searchpan"
            android:background="@drawable/round"
            android:backgroundTint="#311B92"
            android:text="FAQ"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView6"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView2"
            android:layout_alignTop="@+id/imageView5"
            app:srcCompat="@drawable/faq" />
    </RelativeLayout>
</ScrollView>




