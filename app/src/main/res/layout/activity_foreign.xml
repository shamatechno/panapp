<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#9575CD"
    tools:context=".foreign">

    <Button
        android:id="@+id/newpan2"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/colorPrimary"
        android:text="New PAN CARD"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/change2"     android:background="@drawable/round"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="158dp"
        android:text="Changes / Correction /  Surrender  / Cancellation of PAN CARD" />

    <Button
        android:id="@+id/reprint2"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="179dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/colorPrimary"
        android:text="Reprint / Reissue / Lost / Duplicate PAN CARD"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/reissue2"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/colorPrimary"
        android:text="Search / Track / Check PAN"
        android:textColor="#ffffff" />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9326266365527831/4995691521">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>